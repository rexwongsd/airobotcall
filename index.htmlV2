            margin-bottom: 1.5rem;
            line-height: 1.2;
            animation: fadeInUp 0.8s ease-out;
        }

        /* 副标题 */
        .subtitle {
            font-size: 1.8rem;
            margin-bottom: 3rem;
            opacity: 0.9;
            animation: fadeInUp 0.8s ease-out 0.2s forwards;
            opacity: 0;
        }

        /* 闪烁CTA按钮 */
        .cta-button {
            display: inline-block;
            padding: 20px 45px;
            font-size: 1.8rem;
            background: #FF3B3B;
            color: white !important;
            text-decoration: none;
            border-radius: 50px;
            box-shadow: 0 10px 30px rgba(255,59,59,0.4);
            animation: 
                pulse 1.5s infinite,
                fadeInUp 0.8s ease-out 0.4s forwards;
            opacity: 0;
            transition: transform 0.3s;
        }

        .cta-button:hover {
            transform: translateY(-3px);
            background: #FF5555;
        }

        /* 浮动箭头 */
        .scroll-arrow {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            animation: float 2s infinite;
            opacity: 0.8;
        }

        /* 关键帧动画 */
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255,59,59,0.4); }
            70% { box-shadow: 0 0 0 20px rgba(255,59,59,0); }
            100% { box-shadow: 0 0 0 0 rgba(255,59,59,0); }
        }

        @keyframes float {
            0%, 100% { transform: translate(-50%, 0); }
            50% { transform: translate(-50%, -15px); }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* 移动端适配 */
        @media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
                padding: 0 10%;
            }
            .subtitle {
                font-size: 1.2rem;
                padding: 0 5%;
            }
            .cta-button {
                font-size: 1.4rem;
                padding: 15px 30px;
            }
        }
    </style>
</head>
